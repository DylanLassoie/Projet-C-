<Application x:Class="Projet_c_.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Projet_c_"
             xmlns:viewModel="clr-namespace:Projet_c_.MVM.ViewModel"
             xmlns:view="clr-namespace:Projet_c_.MVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MainButtonTheme.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Theme/TextblockTheme.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:MainViewModel}">
                <view:PlayerHomeView></view:PlayerHomeView>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
